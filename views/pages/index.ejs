<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
  <meta http-equiv="Pragma" content="no-cache">
  <meta http-equiv="Expires" content="0">
  <title><%= typeof title !== 'undefined' ? title : 'Breeze Weather' %></title>
  <link href="/css/output.css" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-50">
  <%- include('../components/navbar') %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Main Search Section -->
    <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md p-6 mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Check the Weather</h1>
      <form action="/weather" method="GET" class="space-y-4">
        <div>
          <label for="city" class="block text-sm font-medium text-gray-700">Location</label>
          <div class="mt-1 relative rounded-md shadow-sm">
            <input type="text" 
                   name="city" 
                   id="city" 
                   class="block w-full px-4 py-3 rounded-md border border-gray-300 focus:ring-blue-500 focus:border-blue-500"
                   placeholder="Enter city name or location"
                   required>
          </div>
        </div>
        <button type="submit" 
                class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          Get Weather Forecast
        </button>
      </form>
    </div>

    <!-- Weather Results Section -->
    <% if (typeof weather !== 'undefined' && weather) { %>
      <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md p-6 mt-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Weather for <%= weather.current.location %></h2>
        
        <!-- Current Weather -->
        <div class="bg-blue-50 rounded-lg p-4 mb-6">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="text-center">
              <div class="text-sm text-gray-600">Temperature</div>
              <div class="text-2xl font-bold"><%= weather.current.temperature %>°C</div>
            </div>
            <div class="text-center">
              <div class="text-sm text-gray-600">Humidity</div>
              <div class="text-2xl font-bold"><%= weather.current.humidity %>%</div>
            </div>
            <div class="text-center">
              <div class="text-sm text-gray-600">Wind Speed</div>
              <div class="text-2xl font-bold"><%= weather.current.windSpeed %> km/h</div>
            </div>
            <div class="text-center">
              <div class="text-sm text-gray-600">Conditions</div>
              <div class="text-2xl font-bold"><%= weather.current.description %></div>
            </div>
          </div>
        </div>

        <!-- Hourly Forecast -->
        <h3 class="text-xl font-semibold mb-4">Next Hours</h3>
        <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
          <% weather.forecast.forEach(hour => { %>
            <div class="bg-gray-50 rounded-lg p-3 text-center">
              <div class="text-sm text-gray-600"><%= hour.time %></div>
              <div class="text-lg font-bold"><%= hour.temperature %>°C</div>
              <div class="text-sm"><%= hour.description %></div>
              <div class="text-sm text-blue-600"><%= hour.precipitationProbability %>% rain</div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>

    <!-- User-specific Content -->
    <% if (!locals.user) { %>
      <!-- Guest View -->
      <div class="max-w-3xl mx-auto bg-blue-50 rounded-lg p-6 border border-blue-100">
        <h2 class="text-xl font-semibold text-blue-900 mb-3">Create an Account</h2>
        <p class="text-blue-700 mb-4">
          Sign up to unlock additional features:
        </p>
        <ul class="list-disc list-inside text-blue-600 mb-6 space-y-2">
          <li>Save your favorite locations</li>
          <li>View your search history</li>
          <li>Access temperature conversion tools</li>
          <li>Customize your weather preferences</li>
        </ul>
        <div class="flex space-x-4">
          <a href="/register" 
             class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            Register Now
          </a>
          <a href="/login" 
             class="inline-flex items-center px-4 py-2 border border-blue-300 text-sm font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            Login
          </a>
        </div>
      </div>
    <% } else { %>
      <!-- Authenticated User View -->
      <div class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h2>
          <nav class="space-y-3">
            <a href="/dashboard" class="flex items-center p-3 text-gray-700 rounded-md hover:bg-gray-50">
              <span>Weather Dashboard</span>
            </a>
            <a href="/favorites" class="flex items-center p-3 text-gray-700 rounded-md hover:bg-gray-50">
              <span>Saved Locations</span>
            </a>
            <a href="/history" class="flex items-center p-3 text-gray-700 rounded-md hover:bg-gray-50">
              <span>Search History</span>
            </a>
          </nav>
        </div>

        <!-- Tools and Settings -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Tools & Settings</h2>
          <nav class="space-y-3">
            <a href="/converter" class="flex items-center p-3 text-gray-700 rounded-md hover:bg-gray-50">
              <span>Temperature Converter</span>
            </a>
            <a href="/profile" class="flex items-center p-3 text-gray-700 rounded-md hover:bg-gray-50">
              <span>Profile Settings</span>
            </a>
            <% if (locals.user.role === 'admin') { %>
              <a href="/admin" class="flex items-center p-3 text-gray-700 rounded-md hover:bg-gray-50">
                <span>Admin Dashboard</span>
              </a>
            <% } %>
          </nav>
        </div>
      </div>
    <% } %>
  </div>

  <script>
    // Auto-focus the search input when the page loads
    document.addEventListener('DOMContentLoaded', () => {
      document.getElementById('city').focus();
    });
  </script>
</body>
</html> 