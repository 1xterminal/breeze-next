<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
  <meta http-equiv="Pragma" content="no-cache">
  <meta http-equiv="Expires" content="0">
  <title><%= typeof title !== 'undefined' ? title : 'Breeze Weather Dashboard' %></title>
  <link href="/css/output.css" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-50">
  <%- include('../../components/navbar') %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white/20 backdrop-blur-[10px] rounded-lg shadow-md p-6 mb-8">
      <h1 class="text-2xl font-bold text-white mb-6">Weather Dashboard</h1>
      
      <!-- Search Form -->
      <div class="mb-8">
        <form action="/dashboard/search" method="GET" class="flex flex-col gap-4 md:flex-row md:items-end">
          <div class="flex-grow">
            <label for="city" class="block text-sm font-medium text-white mb-1">Search Location</label>
            <input 
              type="text" 
              id="city" 
              name="city" 
              class="w-full px-4 py-2 bg-white/20 border border-white/30 rounded-md focus:ring-white/50 focus:border-white/50 text-white placeholder-white/70"
              placeholder="Enter city name (e.g., London, New York, Tokyo)" 
              value="<%= locals.searchQuery || '' %>"
              required
            >
          </div>
          <button 
            type="submit"
            class="px-6 py-2 bg-white/30 text-white font-medium rounded-md hover:bg-white/40 focus:outline-none focus:ring-2 focus:ring-white/50 transition-colors"
          >
            Search
          </button>
        </form>
      </div>

      <% if (locals.error) { %>
        <div class="bg-red-400/50 border border-red-400/50 text-white px-4 py-3 rounded mb-6" role="alert">
          <span class="block sm:inline"><%= locals.error %></span>
        </div>
      <% } %>

      <% if (locals.weather) { %>
        <!-- Current Weather Section -->
        <div class="bg-white/20 backdrop-blur-[10px] text-white rounded-xl p-6 mb-8">
          <div class="flex flex-col md:flex-row md:justify-between items-center mb-6">
            <div>
              <h2 class="text-xl md:text-2xl font-bold"><%= locals.weather.current.location %></h2>
              <p class="text-lg">
                <%= new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
              </p>
            </div>
            <div class="text-center mt-4 md:mt-0">
              <div class="text-4xl md:text-5xl font-bold">
                <%= locals.weather.current.temperature %>&deg;<%= locals.weather.current.units.temperature %>
              </div>
              <p class="text-xl"><%= locals.weather.current.description %></p>
            </div>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="bg-white/20 rounded-lg p-3 text-center backdrop-blur-[10px]">
              <p class="text-sm">Humidity</p>
              <p class="text-xl font-bold"><%= locals.weather.current.humidity %>%</p>
            </div>
            <div class="bg-white/20 rounded-lg p-3 text-center backdrop-blur-[10px]">
              <p class="text-sm">Wind Speed</p>
              <p class="text-xl font-bold"><%= locals.weather.current.windSpeed %> <%= locals.weather.current.units.windSpeed %></p>
            </div>
            <div class="bg-white/20 rounded-lg p-3 text-center backdrop-blur-[10px]">
              <p class="text-sm">Wind Direction</p>
              <p class="text-xl font-bold"><%= locals.weather.current.windDirection %>&deg;</p>
            </div>
            <div class="bg-white/20 rounded-lg p-3 text-center backdrop-blur-[10px]">
              <p class="text-sm">Precipitation</p>
              <p class="text-xl font-bold"><%= locals.weather.current.precipitation %> <%= locals.weather.current.units.precipitation %></p>
            </div>
          </div>
        </div>

        <!-- Hourly Forecast Section -->
        <div class="mb-8">
          <h3 class="text-xl font-semibold mb-4 text-white">Hourly Forecast</h3>
          <div class="overflow-auto pb-4">
            <div class="flex gap-4 min-w-max">
              <% locals.weather.hourlyForecast.forEach(hour => { %>
                <div class="bg-white/20 backdrop-blur-[10px] rounded-lg p-3 text-center min-w-[100px] text-white">
                  <p class="text-sm font-medium"><%= hour.time %></p>
                  <p class="text-xl font-bold my-1"><%= hour.temperature %>&deg;</p>
                  <p class="text-xs text-white/80"><%= hour.precipitationProbability %>% rain</p>
                  <p class="text-sm"><%= hour.description %></p>
                </div>
              <% }); %>
            </div>
          </div>
        </div>

        <!-- Daily Forecast Section -->
        <div>
          <h3 class="text-xl font-semibold mb-4 text-white">7-Day Forecast</h3>
          <div class="grid gap-4">
            <% locals.weather.dailyForecast.forEach(day => { %>
              <div class="bg-white/20 backdrop-blur-[10px] rounded-lg p-4 grid grid-cols-3 md:grid-cols-5 items-center text-white">
                <div class="font-medium"><%= day.date %></div>
                <div class="text-center">
                  <span class="text-white/80">Min</span>
                  <div class="font-bold"><%= day.minTemp %>&deg;</div>
                </div>
                <div class="text-center">
                  <span class="text-white/80">Max</span>
                  <div class="font-bold"><%= day.maxTemp %>&deg;</div>
                </div>
                <div class="text-center hidden md:block">
                  <span class="text-white/80">Rain</span>
                  <div class="font-bold"><%= day.precipitationProbability %>%</div>
                </div>
                <div class="hidden md:block">
                  <span class="text-white/80">Conditions</span>
                  <div><%= day.description %></div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      <% } else if (!locals.error) { %>
        <!-- Initial/No Results State -->
        <div class="bg-white/20 backdrop-blur-[10px] border border-white/30 rounded-lg p-6 text-center">
          <h3 class="text-xl font-medium text-white mb-4">Welcome to Your Weather Dashboard</h3>
          <p class="text-white/80 mb-6">
            Search for a city above to see detailed weather information. You'll get hourly and daily forecasts for the next 7 days.
          </p>
          <div class="flex flex-wrap justify-center gap-4 text-sm text-white">
            <div class="bg-white/20 px-3 py-1 rounded-full">Temperature</div>
            <div class="bg-white/20 px-3 py-1 rounded-full">Precipitation</div>
            <div class="bg-white/20 px-3 py-1 rounded-full">Wind Speed</div>
            <div class="bg-white/20 px-3 py-1 rounded-full">Humidity</div>
            <div class="bg-white/20 px-3 py-1 rounded-full">Weather Conditions</div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const scrollContainer = document.querySelector('.overflow-auto');
      if (scrollContainer) {
        let isDown = false;
        let startX;
        let scrollLeft;

        scrollContainer.addEventListener('mousedown', (e) => {
          isDown = true;
          scrollContainer.classList.add('grabbing');
          startX = e.pageX - scrollContainer.offsetLeft;
          scrollLeft = scrollContainer.scrollLeft;
        });

        scrollContainer.addEventListener('mouseleave', () => {
          isDown = false;
          scrollContainer.classList.remove('grabbing');
        });

        scrollContainer.addEventListener('mouseup', () => {
          isDown = false;
          scrollContainer.classList.remove('grabbing');
        });

        scrollContainer.addEventListener('mousemove', (e) => {
          if (!isDown) return;
          e.preventDefault();
          const x = e.pageX - scrollContainer.offsetLeft;
          const walk = (x - startX) * 2; // Adjust scroll speed as needed
          scrollContainer.scrollLeft = scrollLeft - walk;
        });
      }
    });
  </script>
</body>
</html>
