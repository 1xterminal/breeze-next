<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>System Logs</title>
  <!-- Include Tailwind CSS from CDN -->
  <link href="/css/output.css" rel="stylesheet" />
</head>
<body>
    <%- include('../../components/navbar') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="space-y-6">
        <!-- System Logs -->
        <div class="glass-card">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-white">System Logs</h2>
                <a href="/admin" class="text-white/80 hover:text-white transition-colors">Back to Dashboard</a>
            </div>

            <div class="space-y-4">
                <% if (logs && logs.length > 0) { %>
                    <% logs.forEach(log => { %>
                        <div class="bg-white/10 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-2">
                                <div class="flex items-center">
                                    <span class="text-white font-medium"><%= log.action %></span>
                                    <% if (log.targetUserId) { %>
                                        <span class="text-white/60 text-sm ml-2">
                                            • Target: <%= log.targetUserId.username %>
                                        </span>
                                    <% } %>
                                </div>
                                <span class="text-white/60 text-sm"><%= new Date(log.createdAt).toLocaleString() %></span>
                            </div>
                            <div class="text-white/70 text-sm">
                                By <%= log.adminUserId?.username || 'Unknown' %> • IP: <%= log.ipAddress %>
                            </div>
                            <% if (log.details && Object.keys(log.details).length > 0) { %>
                                <div class="mt-2 text-white/60 text-sm">
                                    Details: <%= JSON.stringify(log.details) %>
                                </div>
                            <% } %>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-white/70 text-center py-8">No system logs available</div>
                <% } %>
            </div>
        </div>
    </div>
</div> 
</body>
</html>